<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterActivity"
    android:background="#000000"
    >


    <ImageView
        android:id="@+id/regis_logo"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp"
        android:src="@drawable/logo2">

    </ImageView>

    <EditText
        android:layout_below="@+id/regis_logo"
        android:id="@+id/regis_username"
        android:layout_width="200dp"
        android:layout_height="70dp"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="100dp"
        android:background="@drawable/border"
        android:textStyle="italic"
        android:textColor="#ffffff"
        android:hint="nickname"
        android:textAlignment="center"
        android:textColorHint="#ffffff"
        android:padding="5dp"
        android:textSize="30dp"
        >

    </EditText>

    <EditText
        android:id="@+id/regis_pass"
        android:layout_width="200dp"
        android:layout_height="70dp"
        android:layout_marginTop="50dp"
        android:layout_below="@+id/regis_username"
        android:layout_marginLeft="100dp"
        android:background="@drawable/border"
        android:textStyle="italic"
        android:textColor="#ffffff"
        android:textColorHint="#ffffff"
        android:padding="5dp"
        android:hint="password"
        android:textAlignment="center"
        >

    </EditText>
    <TextView
        android:id="@+id/already_have"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/regis_submit"
        android:layout_marginLeft="100dp"
        android:text="Already have nickname"
        android:textColor="#ff0000"
        android:textSize="25dp"
        android:layout_marginTop="20dp"
        >

    </TextView>
    <Button
        android:id="@+id/regis_submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/regis_pass"
        android:layout_marginTop="60dp"
        android:layout_centerInParent="true"
        android:text="Move to bingo"
        android:textAlignment="center"
        android:textSize="25dp"
        android:padding="10dp"
        android:background="@drawable/border2"
        >

    </Button>
</RelativeLayout>